<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivManuever"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        app:srcCompat="@android:color/transparent" />

    <com.example.mbankole.tripplanner.utility.RalewayMedTextView
        android:id="@+id/tvDirections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Directions"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_alignTop="@+id/ivManuever"
        android:layout_toEndOf="@+id/ivManuever" />

    <com.example.mbankole.tripplanner.utility.RalewayLightTextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDirections"
        android:layout_toEndOf="@+id/ivManuever"
        android:text="Distance" />
</RelativeLayout>