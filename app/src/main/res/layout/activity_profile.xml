<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mbankole.tripplanner.ProfileActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@color/black" />

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="86dp"
        android:layout_height="82dp"
        app:srcCompat="@color/black"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="87dp"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvUsernameProfiles"
        android:layout_width="161dp"
        android:layout_height="172dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="277dp"
        android:layout_alignBottom="@+id/tvInterests"
        android:layout_toEndOf="@+id/tvInterests"
        android:layout_marginStart="21dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="203dp" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="-105dp"
        tools:layout_editor_absoluteY="-57dp"
        android:layout_below="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:layout_marginStart="11dp"
        android:layout_marginTop="87dp" />

    <TextView
        android:id="@+id/tvInterests"
        android:layout_width="145dp"
        android:layout_height="172dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="280dp"
        android:layout_below="@+id/editText7"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="31dp"
        android:layout_marginTop="51dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignTop="@+id/tvUsernameProfiles"
        android:layout_alignStart="@+id/tvUsernameProfiles"
        android:layout_marginTop="21dp" />

</RelativeLayout>
