<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <com.example.mbankole.tripplanner.utility.CircleImageView
        android:id="@+id/ivCircle"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@color/colorAccent" />

    <com.example.mbankole.tripplanner.utility.CircleImageView
        android:id="@+id/ivLocationImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        app:srcCompat="@color/black" />

    <com.example.mbankole.tripplanner.utility.RalewayBoldTextView
        android:id="@+id/tvLocationname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivLocationImage"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/ivLocationImage"
        android:maxLines="1"
        android:maxWidth="250dp"
        android:text="Location Name"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <LinearLayout
        android:id="@+id/llTransport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/ivCircle">

    </LinearLayout>

    <com.example.mbankole.tripplanner.utility.RalewayMedTextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textColor="@color/black"
        android:layout_below="@+id/tvLocationname"
        android:layout_alignStart="@+id/tvLocationname" />

</RelativeLayout>