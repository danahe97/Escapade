<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <ImageView
        android:id="@+id/ivLocationImage"
        android:layout_width="174dp"
        android:layout_height="174dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        app:srcCompat="@color/black" />

    <com.example.mbankole.tripplanner.utility.RalewayBoldTextView
        android:id="@+id/tvLocationname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location Name"
        android:textColor="@color/white"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_margin="8dp"
        android:layout_alignTop="@+id/ivLocationImage"
        android:layout_alignStart="@+id/ivLocationImage"
        android:layout_alignEnd="@+id/ivLocationImage" />

</RelativeLayout>