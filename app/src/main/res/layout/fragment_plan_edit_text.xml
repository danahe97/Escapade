<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fitsSystemWindows="false"
        android:hint="Enter a title..."
        android:maxLength="140"
        android:layout_below="@+id/tvTitle"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fitsSystemWindows="false"
        android:hint="Enter a brief description..."
        android:maxLength="140"
        android:layout_below="@+id/tvDescription"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/btSubmit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:tint="@color/colorAccent"
        android:text="OK"
        android:layout_margin="8dp"
        android:textColor="@android:color/primary_text_dark"
        app:srcCompat="@drawable/ic_check"
        android:layout_below="@+id/etDescription"
        android:layout_alignEnd="@+id/etDescription" />

    <com.example.mbankole.tripplanner.utility.RalewayMedTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:layout_marginTop="8dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/etTitle" />

    <com.example.mbankole.tripplanner.utility.RalewayMedTextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Description:"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_below="@+id/etTitle"
        android:layout_alignStart="@+id/etDescription" />

</RelativeLayout>